{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:meteor/recommended",
    "stylelint"
  ],
  "settings": {
    "import/resolver": {
      "meteor": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  },
  "rules": {
    "camelcase": 0,
    "node/no-unsupported-features/es-syntax": 0,
    "react/no-did-update-set-state": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "no-console": 0,
    "prettier/prettier": [
      "error",
      {
        "traillingComma": "es5",
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "meteor",
    "babel"
  ]
}